<%- include('./partials/header.ejs') %>

<style>
    body, html {
        height: 100%;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
        overflow: hidden; 
    }
    body{
        overflow-y: scroll; 
    }

    #container2 {
        background: linear-gradient(179.1deg, rgb(43, 170, 96) 2.3%, rgb(129, 204, 104) 98.3%);
        width: 500px;
        padding: 25px 30px;
        margin: 50px auto 0;
        border-top: 5px solid #196F3D;
        box-shadow: 0 0 7px 5px rgba(0, 0, 0, 0.5);
        border-radius: 5px;
        height: 80vh;
        margin-top: 40px;
        align-content: center;
        align-self: center;
        text-align: center;
    }

    #container2 h1 {
        font-size: 35px;
        font-weight: 500;
        padding: auto;
        text-align: center;
        position: relative;
        margin-bottom: 10px;
        color: white;
        width: 100%;
        
    }

    .skill-user {
        display: flex;
        flex-direction: column;
        flex: 1;
        gap: 10px;
    }

    .skill {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .skill label {
        display: flex;
        font-weight: 1000;
        color: white;
        font-size: large;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        margin-bottom: 5px;
    }

    #container2 .skill input[type="text"] {
        width: 100%;
        padding: 8px;
        font-size: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: whitesmoke;
        align-items: center;
        box-sizing: border-box;
   
    
    }

    #container2 .skill ::placeholder {
        color: #848884;
    }

    .submit-button {
        text-align: center;
        margin-top: 15px;
        height:20%;

    }

    .submit-button input[type="submit"] {
        padding: 10px 20px;
        font-size: 16px;
        background-color: #0b510e;
        color: white;
        border: none;
        border-radius: 5px;
    }

    .submit-button input[type="submit"]:hover {
        background-color: #45a049;
    }
     
    @media screen and (max-width:800px)
{
    #container2 {
        width:auto;
        max-width: fit-content;
        height:auto;
    }
    #container2 h1 {
        font-size: 28px;
    }
    #container2 .skill input[type="text"] {
        font-size: 15px;
        padding: auto;
    }
    .skill label {
       
        font-size: auto;
        margin-bottom: auto;
    }
    .submit-button input[type="submit"] {
     
        font-size: 16px;
        padding: auto;
    }
    .skill-user {
        margin-top: auto;
        padding: auto;
        height: auto;
    }
    .submit-button {
        text-align: center;
        margin:10px;
        height:auto;

    }

}

</style>

<div id="container2">
    <h1>Enter your top 5 skills</h1>
    <form action="/skill_hunt/skillfit" autocomplete="on" method="POST" enctype="">
        <div class="skill-user">
            <div class="skill">
                <label for="sname1">Skill 1</label>
                <input type="text" placeholder="Enter your Skill" name="skill1" id="sname1" required>
            </div>
            <div class="skill"> 
                <label for="sname2">Skill 2</label>
                <input type="text" placeholder="Enter your Skill" name="skill2" id="sname2" required>
            </div>
            <div class="skill">
                <label for="sname3">Skill 3</label>
                <input type="text" placeholder="Enter your Skill" name="skill3" id="sname3" required>
            </div>
            <div class="skill">
                <label for="sname4">Skill 4</label>
                <input type="text" placeholder="Enter your Skill" name="skill4" id="sname4" required>
            </div>
            <div class="skill">
                <label for="sname5">Skill 5</label>
                <input type="text" placeholder="Enter your Skill" name="skill5" id="sname5" required>
            </div>
        </div>
        <div class="submit-button">
            <input type="submit" value="Predict">
        </div>
    </form>
</div>

